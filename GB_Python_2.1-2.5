# Задание №5

rating =[7, 5, 3, 3, 2]
add_rating = int(input('Введите новый элемент рейтинга: '))
inserted = False
print(f'Исходный рейтинг: {rating}')

for i, el in enumerate(rating):
    if el < add_rating:
        rating.insert(i, add_rating)
        print(f'Новое значение {add_rating} пришлось на {i} позицию: {rating}')
        inserted = True
        break
if not inserted:
    rating.append(add_rating)
    print(f'Новое значение {add_rating} добавили в конец списка: {rating}')
