'''
test_5.4.txt
One — 1
Two — 2
Three — 3
Four — 4
'''

translate = {'One' : 'Один', 'Two' : 'Два', 'Three' : 'Три', 'Four' : 'Четыре'}
new_file = []
with open('test_5.4.txt', 'r', encoding='utf-8') as my_file:
    for i in my_file:
        i = i.split(' ', 1)
        new_file.append(translate[i[0]] + '  ' + i[1])
    print(new_file)

with open('new_test_5.4.txt', 'w', encoding='utf-8') as my_file_new:
    my_file_new.writelines(new_file)

